record(calcout, "$(SubSys):iocHeartbeat") {
  field(SCAN, "1 second")
  field(CALC, "A?0:1")
  field(INPA, "$(SubSys):iocHeartbeat.VAL")
  field(FLNK, "$(SubSys):Heartbeat:PLC:Output")
}

# Send Heartbeat down pulse to PLC
record(bo, "$(SubSys):Heartbeat:PLC:Output") {
  field(OUT, "$(SubSys):EPICSHeartbeatWrite PP")
  field(DOL, "$(SubSys):iocHeartbeat")
  field(OMSL, "closed_loop")
}
